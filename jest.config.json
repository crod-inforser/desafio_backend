{
  "testEnvironment": "node",
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/controllers/*.ts",
    "src/zod/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/test/",
    "/node_modules/",
    "/src/app.ts"
  ],
  "testRegex": "test/unit/.*\\.test\\.(js|ts)$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "collectCoverage": true,
  "reporters": [
    "default"
  ],
  "preset": "ts-jest"
}